{
  /* Text Editor */
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.detectIndentation": true,
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  /* Text Editor - Formatting */
  "editor.formatOnSave": true,
  /* Text Editor - Files */
  "files.insertFinalNewline": true,

  /* C/C++ Extension - Intellisense */
  "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: Google, BreakStringLiterals: false, ColumnLimit: 120, ContinuationIndentWidth: 2 }",
  /* CMake Tools Extension */
  "cmake.sourceDirectory": ["${workspaceFolder}/ccprog1"],
  /* Makefile Tools Extension */
  "makefile.makefilePath": "./build/Makefile",
  /* Prettier Extension */
  "prettier.printWidth": 120,
  /* Pylance Extension */
  "python.analysis.autoImportCompletions": true,
  "python.analysis.fixAll": ["source.unusedImports"],
  "python.analysis.typeCheckingMode": "strict",
  /* Ruff Extension */
  "ruff.configuration": "./ruff.toml",
  "ruff.lineLength": 120,

  /* C Files Only */
  "[c][cpp]": {
    /* Text Editor */
    "editor.codeActionsOnSave": { "source.fixAll": "explicit", "source.organizeImports": "explicit" },
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  /* Python Files Only */
  "[python]": {
    /* Text Editor */
    "editor.codeActionsOnSave": { "source.fixAll": "explicit", "source.organizeImports": "explicit" },
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.tabSize": 4
  }
}
